pipeline {
  environment {
    registry = "bnarasimha21/codesnippetsapi"
    registryCredential = "DockerHub"
    dockerImage = ""
  }
  
  agent any
  
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://bnarasimha21@bitbucket.org/codesnippers/codesnipapi.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
        steps{
            script {
                docker.withRegistry('', registryCredential) {
                    dockerIamge.push()
                }
            }
        }
    }
  }
}